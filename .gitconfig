[url "git@github.com:"]
	insteadOf = https://github.com/
	insteadOf = git://github.com/
[core]
	editor = nvim -f
[alias]
	aliases = "!f() { git config --global -l | grep alias | sort; }; f"
	authors-list = shortlog -e -s -n
	cane = commit --amend --no-edit
	discard = checkout --
	uncommit = reset --soft HEAD^

[push]
	autoSetupRemote = true
[pull]
	rebase = true
[merge]
	conflictStyle = zdiff3
[gpg]
	format = ssh
[user]
	name = benjamin liu
	signingkey = /Users/benjamin.liu/.ssh/id_ed25519.pub
[branch]
	sort = -committerdate
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    side-by-side = true
    line-numbers = true
    syntax-theme = Catppuccin Macchiato
[diff]
    colorMoved = default
	algorithm = histogram
[gc]
	auto = 0
[commit]
	gpgsign = true
[pack]
	threads = 6
[help]
	autocorrect = 10
[rebase]
	autosquash = true
	updateRefs = true
[fetch]
	prune = true
