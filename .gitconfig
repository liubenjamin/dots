[url "git@github.com:"]
	insteadOf = https://github.com/
[core]
	editor = vim
[alias]
	cane = commit --amend --no-edit
[push]
	autoSetupRemote = true
[pull]
	ff = only
[merge]
	conflictStyle = diff3
[gpg]
	format = ssh
[user]
	name = benjamin liu
	signingkey = /Users/benjamin.liu/.ssh/id_ed25519.pub
[branch]
	sort = -committerdate
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    side-by-side = true
    line-numbers = true
    syntax-theme = GitHub
[diff]
    colorMoved = default
